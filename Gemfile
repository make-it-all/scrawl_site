gem 'pg'

gem 'sass-rails', '~> 5.0'
gem 'haml-rails'
gem 'jquery-rails'
gem 'uglifier', '>= 1.3.0'

gem 'clearance'

group :development, :test do
  gem 'sqlite3'
  gem 'byebug', platforms: [:mri, :mingw, :x64_mingw]
end

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'

  gem 'listen', '>= 3.0.5', '< 3.2'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end

